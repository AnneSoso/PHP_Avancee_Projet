{% extends 'base.html.twig' %}

{% block title %}Films List{% endblock %}

{% block body %}

  <form action="{{ path('do-upload') }}" method="post" enctype="multipart/form-data">

        <input type="hidden" name="token" value="{{ csrf_token('upload') }}" />

        <div class="content">
          <p><br/></p>
          <h1>Poster Movie Addition</h1>
            <label for="myfile">File to upload:</label>
            <input type="file" name="myfile" id="myfile" class="btn btn-primary">
        </div>
        <button type="submit" class="btn btn-success">Send</button>

  </form>

{% endblock %}